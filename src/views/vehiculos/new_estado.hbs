<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Ingreso de Vehiculo</h3>
    </div>
    <div class="card-body">
      <form action="/vehiculos/creando_estado" method="POST">

      <div class="form-group">
          <input type="text" name="id" class="form-control" placeholder="ID" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="nombre" class="form-control" placeholder="Nombre Estado" autofocus/>
        </div>
        Estado del Vehiculo
        <div class="form-group">
            <select type="text" name="subastable" >
                <option value="false">Falso</option>
                <option value="true">Verdadero</option>     
            </select>
        </div>
                  
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar Estado
          </button>
        </div>
      </form>
    </div>
  </div>
</div>