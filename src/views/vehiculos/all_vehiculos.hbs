<h1><font color="white">Inventario Por Usuario</font></h1>
<div class="row">
  {{#each vehiculos2 }}
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title d-flex justify-content-between align-items-center">
            {{ tipo }},{{ marca }} <a href="/vehiculos/edit/{{_id}}"><i class="fas fa-camera"></i></a>                
            </h4>
            <a href="/vehiculos/ver/{{_id}}"><i class="fas fa-image"></i></a>
            
            </button>
             <button type="submit" class="btn btn-primary" onclick="location.href='/vehiculos/cambio_estado1/{{_id}}'">
            <i class="fa fa-btn fa-pencil"></i>1
            </button>
            <button type="submit" class="btn btn-primary" onclick="location.href='/vehiculos/cambio_estado2/{{_id}}'">
            <i class="fa fa-btn fa-pencil"></i>2
            </button>
            <button type="submit" class="btn btn-primary" onclick="location.href='/vehiculos/cambio_estado3/{{_id}}'">
            <i class="fa fa-btn fa-pencil"></i>3
            </button>
            <button type="submit" class="btn btn-primary" onclick="location.href='/vehiculos/cambio_estado4/{{_id}}'">
            <i class="fa fa-btn fa-pencil"></i>4
            </button>
            <button type="submit" class="btn btn-primary" onclick="location.href='/vehiculos/cambio_estado5/{{_id}}'">
            <i class="fa fa-btn fa-pencil"></i>5
            </button>     
            <p> 
            {{ color }},{{ modelo }}, {{ motor }},{{ placa }}, <b>Seguros:</b> {{id_aseguradora}}, <b>Estado:</b> {{nombre_estado}} 

            </p>
            <!-- DELETE REQUEST -->
            <form action="/vehiculos/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar Vehiculo</button>
            </form>
            
        </div>
        </div>
    </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola </h1>
      <p clsss="lead">No has creado ningun vehiculo.</p>
      <a href="/vehiculos/nuevo_vehiculo" class="btn btn-success btn-block">Create Uno!</a>
    </div>
  </div>
  {{/each}}
</div>